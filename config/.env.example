# .env.example - Configuration Template
# Copy this file to .env and fill in your actual values.
# Do NOT commit the .env file to version control.

# API Keys
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"
# EXAMPLE_DATA_API_KEY="YOUR_EXAMPLE_DATA_API_KEY"

# Database URLs
# Example for SQLite (used if not overridden):
# VECTOR_DB_URL="sqlite:///./vector_store.db"
# Example for PostgreSQL:
# VECTOR_DB_URL="postgresql://user:password@host:port/dbname"
# RELATIONAL_DB_URL=""

# Model Names/Paths
# Default Sentence Transformer model:
EMBEDDING_MODEL_NAME="all-MiniLM-L6-v2"
# Default LLM (OpenAI):
LLM_MODEL_NAME="gpt-3.5-turbo"
# If using local models, specify paths:
# LOCAL_MODEL_PATH="/path/to/your/local/model"

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"
# Optional: Specify a file to log to
# LOG_FILE="./logs/app.log"

# Application Environment
# Options: development, staging, production
APP_ENV="development"
